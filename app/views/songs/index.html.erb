<ul>

<% @songs.each do |song| %>
  <li><%= link_to song.title, song_path(song) %></li>

  <% if song.artist == nil || song.artist_name == ""  %>
    <p>Artist: <%= display_artist song %></p>
    <% else %>
    <p>Artist: <%= display_artist song %></p>
  <% end %>
  <br>
<% end %>
</ul>
